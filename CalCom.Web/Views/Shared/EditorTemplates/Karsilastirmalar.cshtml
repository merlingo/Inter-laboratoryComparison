@model Calcom.Domain.Entities.Karsilastirmalar
@{
    ViewBag.Title = "Karsilastirmalar";
}

    <div class="form-group">
        <label  class="control-label col-xs-2">Konu</label>
        <div class="col-xs-10">
            @Html.TextBoxFor(x => x.Konu, new {   @class="form-control", placeholder="Karşılaştırma Konusu", required="" })
            @Html.HiddenFor(x=>x.Id)
            @Html.HiddenFor(x=>x.OAId)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-2">Rehber Döküman</label>
        <div class="col-xs-10">
            @Html.TextBoxFor(x => x.RehberDöküman, new {   @class="form-control", placeholder="Rehber Döküman" , required=""})
        </div>
    </div>
<div class="control-group">
        <label class="control-label col-xs-2" for="radios">Yer Seçimi</label>
        <div class="controls">
    <label class="radio-inline" for="radios-0">
      <input type="radio" name="Tur" id="radios-0" value="Laboratuvarda" checked="checked">
      Laboratuvarda
    </label>
    <label class="radio-inline" for="radios-1">
      <input type="radio" name="Tur" id="radios-1" value="Yerinde">
      Yerinde
    </label>
  </div>
    </div>
<br />
    <div class="form-group">
        <label  class="control-label col-xs-2">Ölçüm Aralığı</label>

         <div class="col-xs-10">
          <table class="table"> <tr> <td>@Html.TextBoxFor(x => x.OlcumAraligiBas, new {  @class="form-control" , required=""})</td><td>-</td>
