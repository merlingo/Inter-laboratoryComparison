@model CalCom.Web.Models.TakipListeViewModel
@{
    ViewBag.Title = "Takip";
  ViewBag.Lab = "UMS";
    ViewBag.Yonetici = "Mert Nar";
    ViewBag.CalismaAlani = "Demir Çelik Kalibrasyonu";
    ViewBag.ImagePath = "../../dist/img/user2-160x160.jpg";
}
        <div class="container">
          <!-- Content Header (Page header) -->
          <section class="content-header">
            <h1>
             Karşılaştırmalar
              
            </h1>
            <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Karşılaştırmalar</li>
            @*    <li >Ölçüm</li>*@
            </ol>
          </section>

          <!-- Main content -->
          <section class="content"> <!-- renderBody() buraya gelecek, içerik burada değişecek hatta eğer ihtiyaç duyulursa "content-wrapper" dan da alınabilir. Çünkü her sayfa için değişecek yan menüyü sayfalara alırız.-->
            <div class="row"> 
             <div class="col-sm-3"> 
                 
                     <ul  class="nav nav-pills nav-stacked">
                        <li  class="active"><a href="Takip">Tümü</a></li>
                        <li><a href="YeniKayit"> Yeni Kayıtlar</a></li>
                        <li><a href="Olcumlenenler">Ölçümlenenler</a></li>
                        <li><a href="Sonuclananlar">Sonuçlananlar</a></li>


                    </ul>
                 
              </div> 
            <div class="col-sm-9">
                  <div class="box box-default">
                     <div class="box-header with-border">
                     <h3 class="box-title">Tüm İlgili Karşılaştırmalar</h3>
                     </div>
                  
                <div class="box-body">
                     <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Ölçüm Aleti
                            </th>
                            <th>Konu
                            </th>
                            <th>Durum
                            </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var t in Model.Takipler)
                        {
                            <tr onclick="rowClick('@t.OlcId')">
                                <td> @t.OlcumAleti </td>
                                <td>@t.KarKonu</td>
                                <td>@t.Durum</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
             
             <span id="partialSpan"></span>

                           </div>
               
                   
                 </div><!-- /.box -->
                 
            </div>
        </div>  

          </section>  <!-- /.content -->
      
        </div><!-- /.container -->












