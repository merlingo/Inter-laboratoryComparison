<script>
    function GidenMesaj() {
        
        var x = $("#GiMList :selected").val();
        $('#GiMid').val(x);
       
        $.ajax(
 {
     url: '/Laboratuvar/MesajPartial',
     type: "GET",
     data: { 'mId': x },
     success: function (response) {
         $("#GidenSpan").html(response);

     }
 });
    }

    function GelenMesaj() {

        var x = $("#MGeList :selected").val();
        $('#mgeid').val(x);

        $.ajax(
 {
     url: '/Laboratuvar/MesajPartial',
     type: "GET",
     data: { 'mId': x },
     success: function (response) {
         $("#GelenSpan").html(response);

     }
 });
    }

</script>
