@model CalCom.Web.Models.Laboratuvar.LabTakipViewModel
@{
    ViewBag.Title = "Takip";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="panel-heading">
        <h2>Laboratuvar Takip Ekranı</h2>
    </div>
    <div class="panel-body">
      
        <div class="row">
            <div class="col-md-8">
         <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Laboratuvar Adi
                            </th>
                            <th>Yonetici
                            </th>
                            <th>Calisma Alani
                            </th>
                            <th>
                                Şehir
                            </th>
                            <td>Git</td>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var t in Model.Lablar)
                        {
                            <tr onclick="rowClick('@t.LabId')">
                                <td> @t.LabAdi </td>
                                <td>@t.Yonetici</td>
                                <td>@t.CalismaAlani</td>
                               <td>@t.Sehir</td>
                                <td ><a type="button" class="btn btn-primary btn-circle" href="~/Laboratuvar/ProfilAdmin?LabId=@t.LabId"><i class="fa fa-list"></i>
                            </a>
                                   
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div  class="col-md-4">
                <span id = "partialSpan"></span>
            </div>
          </div>   
    </div>
</div>

<script>
   function rowClick(id){
       $.ajax(
{
    url: '/Laboratuvar/OlcumPartial',
    type: "GET",
    data: { 'Labid': id },
    success: function (response) {
        $("#partialSpan").html(response);

    }
});
    }
</script>